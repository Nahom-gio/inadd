{
  "name": "inad-promotion-website",
  "version": "1.0.0",
  "description": "INAD PROMOTION - Modern React website for experiential marketing agency",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "framer-motion": "^10.16.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci",
    "test:watch": "react-scripts test --watch",
    "test:mobile": "react-scripts test --testPathPattern=mobile --coverage",
    "test:performance": "react-scripts test --testPathPattern=performance --coverage",
    "lint": "eslint src --ext .js,.jsx",
    "lint:fix": "eslint src --ext .js,.jsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,css,md}",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint && npm run format:check && npm run test:coverage",
    "mobile:optimize": "npm run lint && npm run test:mobile && npm run build",
    "performance:audit": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "lighthouse": "npm run performance:audit",
    "lighthouse:mobile": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-mobile.html --preset=mobile",
    "env:setup": "cp env.example .env && echo 'Environment file created. Please edit .env with your actual values.'",
    "env:check": "node -e \"console.log('Environment check:'); console.log('NODE_ENV:', process.env.NODE_ENV); console.log('REACT_APP_API_URL:', process.env.REACT_APP_API_URL || 'Not set');\"",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "import/order": "off",
      "jsx-a11y/no-redundant-roles": "off",
      "jsx-a11y/aria-role": "off",
      "react/no-unescaped-entities": "off",
      "no-console": "off",
      "prefer-template": "off",
      "object-shorthand": "off",
      "no-case-declarations": "off",
      "import/export": "off",
      "react/prop-types": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "identity-obj-proxy": "^3.0.0",
    "lighthouse": "^11.0.0",
    "postcss": "^8.5.6",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.4.17"
  }
}
