# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# API Configuration
REACT_APP_API_URL=https://api.inadpromotion.com
REACT_APP_API_TIMEOUT=30000

# Analytics and Tracking
REACT_APP_GA_MEASUREMENT_ID=GA_MEASUREMENT_ID
REACT_APP_FACEBOOK_PIXEL_ID=YOUR_PIXEL_ID
REACT_APP_LINKEDIN_PIXEL_ID=YOUR_LINKEDIN_ID
REACT_APP_HOTJAR_ID=YOUR_HOTJAR_ID
REACT_APP_CLARITY_ID=YOUR_CLARITY_ID

# Social Media URLs
REACT_APP_FACEBOOK_URL=https://www.facebook.com/inadpromotion
REACT_APP_TWITTER_URL=https://www.twitter.com/inadpromotion
REACT_APP_LINKEDIN_URL=https://www.linkedin.com/company/inadpromotion
REACT_APP_INSTAGRAM_URL=https://www.instagram.com/inadpromotion
REACT_APP_YOUTUBE_URL=https://www.youtube.com/channel/inadpromotion

# Business Information
REACT_APP_COMPANY_NAME=INAD PROMOTION
REACT_APP_COMPANY_EMAIL=hello@inadpromotion.com
REACT_APP_COMPANY_PHONE=+1 (555) 123-4567
REACT_APP_COMPANY_ADDRESS=123 Business St, City, State 12345

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_SOCIAL_TRACKING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_ENABLE_ERROR_TRACKING=true

# Development Settings
REACT_APP_ENABLE_MOCK_API=false
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_LOG_LEVEL=info

# Security
REACT_APP_ENABLE_CSRF_PROTECTION=true
REACT_APP_ENABLE_RATE_LIMITING=true
REACT_APP_ENABLE_SPAM_DETECTION=true

# Performance
REACT_APP_ENABLE_LAZY_LOADING=true
REACT_APP_ENABLE_IMAGE_OPTIMIZATION=true
REACT_APP_ENABLE_VIDEO_OPTIMIZATION=true
